#!/bin/bash
if [ ! -x /usr/bin/youtube-dl ];
then
    echo "Please install youtube-dl script"
    exit 1
fi
if [ $# -lt 1 ];
then
    echo "Usage: $0 playlist-url [youtube-dl options]"
    exit 1
fi
if $(echo "$1" | grep -q album);
then
    youtube-dl $2 $3 $4 $5 -o "%(playlist_title)s/%(playlist_index)02d %(fulltitle)s.%(ext)s" "$1" && \
    echo "Writing album cover..." && \
    youtube-dl -q --max-downloads 1 --skip-download --write-thumbnail --proxy http://10.1.8.1:3131 -o "%(playlist_title)s/album" "$1"
else
    youtube-dl $2 $3 $4 $5 -o "%(fulltitle)s/%(fulltitle)s.%(ext)s" "$1" && \
    echo "Writing album cover..." && \
    youtube-dl -q --max-downloads 1 --skip-download --write-thumbnail --proxy http://10.1.8.1:3131 -o "%(fulltitle)s/album" "$1"
fi
