
super + alt + BackSpace
  pkill -x panel; bspc quit

# make sxhkd reload its configuration file
super + Escape
  pkill -USR1 -x sxhkd

# make bspwm reload rules
super + alt + Escape
  bspc rule -l | while read line; do bspc rule -r head; done ; cat ~/.config/bspwm/bspwmrc | grep '^bspc rule' | sed 's/bspc//' | xargs -L 1 bspc

# close window
super + c
  bspc window -c

# tiled|monocle layouts
super + v
  bspc desktop -l next

# balance split ratios of the tree
super + b
  bspc desktop -B

# toggle floating/fullscreen
super + {F,f}
  bspc window -t {floating,fullscreen}

# toggle sticky
super + s
  bspc window -t sticky

# focus last window/desktop
super + {grave,Tab}
  bspc {window,desktop} -f last

# cycle windows on all desktops
super + {o,i}
  bspc control --record-history off; \
  bspc window {older,newer} -f; \
  bspc control --record-history on

# swap the current window with the biggest
super + m
  bspc window -s biggest

# focus/swap window in given direction
super + {_,shift + }{h,j,k,l}
  bspc window -{f,s} {left,down,up,right}

# circulate the leaves of the tree of the selected desktop
super + {comma,period}
  bspc desktop -C {backward,forward}

# rotate the tree of the selected desktop
super + slash
  bspc desktop -R 90

# focus previous/next desktop
super + bracket{left,right}
  bspc desktop -f {prev,next}

# preselect the splitting area of the selected window
super + ctrl + {h,j,k,l}
  bspc window -p {left,down,up,right}

# cancel presel of window/all windows
super + ctrl + {_,shift + }space
  bspc {window -p cancel,desktop -c}

# set or change the splitting ratio of the edge located in the given direction in relation to the selected window
super + alt + {h,j,k,l}
  bspc window -e {left -10,down +10,up -10,right +10}

super + alt + shift + {h,j,k,l}
  bspc window -e {right -10,up +10,down -10,left +10}

# set the splitting ratio of the selected window
super + ctrl + {1-9}
  bspc window -r 0.{1-9}

# focus/move window - to desktop
super + {_,shift + }{1-6,q,w,e,r,t,y}
  bspc {desktop -f,window -d} ^{1-6,7,8,9,10,11,12}

# Fill window to both monitors
super + alt + f
  bspc config -w focused border_width 0 && bspc window -t floating=on && xdotool getactivewindow windowsize 3840 1080 windowmove 0 0

# revert previous back
super + alt + F
  bspc config -w focused border_width 3 && bspc window -t floating=off

# mouse actions 
~button1
  bspc pointer -g focus

super + button{1-3}
  bspc pointer -g {move,resize_side,resize_corner}

super + @button{1-3}
  bspc pointer -u
# end mouse actions

#
# wm independent hotkeys
#

# terminal
super + Return
  termite 

# pulsemixer
alt + F1
  xdotool search --onlyvisible --classname pulsemixer windowunmap || xdotool search --classname pulsemixer windowmap || st -g 60x10 -c pulsemixer -e pulsemixer

# run dialog
alt + F2
  rofi -show run

# scratchpad
alt + F3
  xdotool search --onlyvisible --class scratchpad windowunmap || xdotool search --class scratchpad windowmap || termite --class scratchpad --geometry 1914x300+0+18 -e "zsh -l"

# spice client
alt + F4
  virt-viewer
  #spicy -h localhost -p 5900

# skype web client
alt + F5
  xdotool search --onlyvisible --classname skypeforlinux windowunmap || xdotool search --classname skypeforlinux windowmap || skypeforlinux 

# show/hide equalizer
#alt + F11
#  xdotool search --onlyvisible --class Qpaeq windowunmap || xdotool search --class Qpaeq windowmap || qpaeq 
  
# screen locker
Scroll_Lock
  alock -auth pam -bg shade:shade=20,color='#001000'

# disable auto screen lock
alt + Scroll_Lock
  /bin/bash -c '[ $(xssstate -s) == "disabled" ] && xset s 180 || xset s 0'

# Screenshot and upload
super + @Print
  export FILE="$HOME/pictures/shots/$(date +%Y%m%d-%T).png"; maim -c 0,0.7,0,0.3 --hidecursor -s $FILE; curl -s -i -X POST -F pewpew=@$FILE http://pic.taximaxim.ru/pic2.php | tail -n1 | xargs xdg-open

# Telegram
super + F1
  /usr/bin/telegram-desktop

# litetran
super + F2
  litetran

super + F9
  eval $(grep mpv ~/.xinitrc)

super + F10
  pkill mpv

# MPD control
super + KP_Multiply
  mpc -h /home/fedotov_sv/.mpd/socket toggle

super + {KP_Add,KP_Subtract}
  mpc -h /home/fedotov_sv/.mpd/socket {next,prev}

super + shift {KP_Add,KP_Subtract}
  mpc -h /home/fedotov_sv/.mpd/socket {volume +5, volume -5}

# Rofi clipboard manager
super + minus
  rofi -modi "clipboard:roficlip.py --show,persistent:roficlip.py --show --persistent,actions:roficlip.py --show --actions" -show clipboard

super + equal
  rofi -modi "clipboard:roficlip.py --show,persistent:roficlip.py --show --persistent,actions:roficlip.py --show --actions" -show persistent

super + backslash
  rofi -modi "clipboard:roficlip.py --show,persistent:roficlip.py --show --persistent,actions:roficlip.py --show --actions" -show actions
