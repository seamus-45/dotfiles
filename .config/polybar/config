;{{{ Bar common
[bar/common]
width = 100%:-12
height = 24
offset-x = 6
offset-y = 6
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

radius = 4.0

line-size = 2
line-color = ${colors.underline}

;border-size = 0
;border-color = #000

padding = 0
module-margin = 0

font-0 = Droid Sans Mono:pixelsize=11:weight=Bold;2
font-1 = FontAwesome:pixelsize=12:antialias=true;2
font-2 = Font Awesome 6 Free Solid:pixelsize=12:antialias=true;2

locale = ru_RU.utf-8

wm-restack = bspwm

;override-redirect = true

scroll-up = bspwm-desknext
scroll-down = bspwm-deskprev
;}}}

;{{{ Bar left
[bar/left]
inherit = bar/common

monitor = HDMI-0

modules-left = bspwm luci
;modules-center = xwindow
modules-right = xkeyboard email temperature cpu memory date vpn powermenu

cursor-click = pointer
cursor-scroll = resize

tray-position = right
tray-maxsize = 16
tray-padding = 4
tray-backgroud=${colors.background}
;}}}

;{{{ Bar right
[bar/right]
inherit = bar/common

monitor = DP-4

modules-left = bspwm
modules-center = mpd pulseaudio
modules-right = xkeyboard temperature cpu memory date vpn powermenu

cursor-click = pointer
cursor-scroll = resize
;}}}

