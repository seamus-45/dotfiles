;}}}

;{{{ Module mpd
[module/mpd]
type = internal/mpd

host = /home/fedotov_sv/.mpd/socket
interval = 2

format-online = <icon-prev> <icon-stop> <toggle> <icon-next> <label-song> <label-time> <icon-repeat> <icon-random>
