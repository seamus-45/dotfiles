;{{{ Bar common
[bar/common]
width = 100%:-12
height = 24
offset-x = 6
offset-y = 6
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

radius = 4.0

line-size = 2
line-color = ${colors.underline}

;border-size = 0
;border-color = #000

padding = 0
module-margin = 0

font-0 = Droid Sans Mono Slashed for Powerline Nerd Font:pixelsize=10:weight=Bold;2
font-1 = FontAwesome:pixelsize=11;1
;font-2 = siji:pixelsize=10;1

locale = ru_RU.utf-8

wm-restack = bspwm

;override-redirect = true

scroll-up = bspwm-desknext
scroll-down = bspwm-deskprev
;}}}

;{{{ Bar left
[bar/left]
inherit = bar/common

monitor = DVI-0

modules-left = bspwm
modules-center = xwindow
modules-right = pulseaudio xkeyboard temperature cpu memory date powermenu

;tray-position = right
;tray-maxsize = 16
;tray-padding = 2
;tray-backgroud=${colors.background}
;}}}

;{{{ Bar right
[bar/right]
inherit = bar/common

monitor = DVI-1

modules-left = bspwm
modules-center = mpd
modules-right = pulseaudio xkeyboard cpu eth date powermenu
;}}}

