# appearance
set font "Droid Sans Mono 10"
set default-bg "#002b36"
set default-fg "#fdf6e3"
set statusbar-bg "#002b36"
set statusbar-fg "#58c5f1"
set adjust-open	width
set pages-per-row 2
set inputbar-fg "#58c5f1"
set completion-highlight-bg "#002b36"
set completion-highlight-fg "#268bd2"
set guioptions ""

# keybindings
map <Space> navigate next  
map <C-Space> navigate previous
map s toggle_statusbar
map i toggle_index
map a adjust_window width
