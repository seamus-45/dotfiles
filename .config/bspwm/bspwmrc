#! /bin/sh

# control windows from previous session
bspc control --adopt-orphans

# spawn panel
$HOME/.config/bspwm/panel &

# bspwm settings
bspc config border_width        3
bspc config window_gap  	6

bspc config split_ratio         0.52
bspc config borderless_monocle  true
bspc config gapless_monocle     true
bspc config focus_follows_pointer true
bspc config pointer_follows_monitor true

bspc config focused_border_color "#cb4b16"
bspc config active_border_color "#586e75"
bspc config normal_border_color "#073642"
bspc config presel_border_color "#b58900"
bspc config focused_locked_border_color "#d7ff00"
bspc config normal_locked_border_color "#d7d700"
bspc config focused_sticky_border_color "#87ff00"
bspc config normal_sticky_border_color "#87af00"
bspc config focused_private_border_color "#af00ff"
bspc config normal_private_border_color "#5f00d7"
bspc config urgent_border_color "#ff0000"
bspc config normal_frame_opacity 0.0
bspc config focused_frame_opacity 0.1

# office setup
bspc monitor DVI-I-1 -n L
bspc monitor VGA-1 -n R
bspc monitor L -d I II III IV
bspc monitor R -d Q W E R

# rules
bspc rule -a gmrun floating=on focus=true center=on 
bspc rule -a Chromium-browser desktop=^1
bspc rule -a mps desktop=^2
bspc rule -a mpc desktop=^3
bspc rule -a Geary desktop=^4
bspc rule -a LiteTran desktop=^6
bspc rule -a glances desktop=^6
bspc rule -a crx_knipolnnllmklapflnccelgolnpehhpl desktop=^6 floating=off follow=on sticky=false
bspc rule -a tmux desktop=^5
bspc rule -a mpv floating=on desktop=^5
bspc rule -a Gimp desktop=^8 follow=on floating=on
bspc rule -a Skype floating=on

# spawn several programs
sxhkd &
geary &
litetran &
termite --class=tmux -e tmux &
termite --class=mps -e mpsyt &
termite --class=mps -e mps &
termite --class=mpc -e ncmpcpp &
termite --class=glances -e glances &
/usr/lib64/chromium-browser/chromium-launcher.sh --profile-directory=Default --app-id=knipolnnllmklapflnccelgolnpehhpl &

